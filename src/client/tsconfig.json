{
  "compilerOptions": {
    "outDir": "./",
    "module": "esnext",
    "target": "es6",
    "lib": ["es2017"],
    "types": ["@citizenfx/client", "@types/node"],
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "diagnostics": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
}
