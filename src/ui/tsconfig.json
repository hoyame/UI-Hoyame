{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es6",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["@types/node"],
		"moduleResolution": "node",
		"diagnostics": true,
		"jsx": "react",
		"removeComments": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./**/*",
		"./../shared/**/*",
	],
	"exclude": []
}
